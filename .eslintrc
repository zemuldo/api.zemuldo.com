{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "mocha": true,
    "jest": true
  },
  "rules": {
    "quotes": [1, "single"],
    "no-console": 1,
    "no-debugger": 1,
    "no-var": 1,
    "semi": [1, "always"],
    "no-trailing-spaces": 0,
    "eol-last": 0,
    "no-unused-vars": [
      "error",
      {
          "varsIgnorePattern": "_",
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "_"
      }
  ],
    "max-len": ["error", 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals":true
    }],
    "no-underscore-dangle": 0,
    "no-alert": 0,
    "no-lone-blocks": 0,
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "eqeqeq": 2,
    "no-implicit-globals": 2,
    "radix": 1,
    "strict": 2,
    "brace-style": 1,
    "comma-style": 2,
    "key-spacing": 1,
    "keyword-spacing": 1,
    "linebreak-style": 2,
    "no-useless-escape": 0
  },
  "settings": {
    "react": {
      "version": "detect", 
      "flowVersion": "0.53"
    }
  }
}
